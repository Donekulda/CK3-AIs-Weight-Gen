{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CK3 AI Weight Generator Configuration",
    "description": "Configuration schema for the CK3 AI Weight Generator tool",
    "type": "object",
    "properties": {
        "directories": {
            "type": "object",
            "description": "Directory paths for the tool",
            "properties": {
                "events": {
                    "type": "string",
                    "description": "Path to directory containing CK3 event files",
                    "default": "events"
                },
                "models": {
                    "type": "string",
                    "description": "Path to directory containing AI model definitions",
                    "default": "models"
                },
                "output": {
                    "type": "string",
                    "description": "Path to directory for output files",
                    "default": "output"
                },
                "backup": {
                    "type": "string",
                    "description": "Path to directory for backup files",
                    "default": "backup"
                }
            },
            "required": [
                "events",
                "models"
            ],
            "additionalProperties": false
        },
        "processing": {
            "type": "object",
            "description": "Processing configuration options",
            "properties": {
                "create_backups": {
                    "type": "boolean",
                    "description": "Whether to create backup files before processing",
                    "default": true
                },
                "backup_suffix": {
                    "type": "string",
                    "description": "Suffix for backup files",
                    "default": ".backup",
                    "pattern": "^\\..*$"
                },
                "file_extensions": {
                    "type": "array",
                    "description": "File extensions to process",
                    "items": {
                        "type": "string",
                        "pattern": "^\\..*$"
                    },
                    "default": [
                        ".txt"
                    ],
                    "minItems": 1
                },
                "encoding": {
                    "type": "string",
                    "description": "File encoding for reading/writing",
                    "default": "utf-8",
                    "enum": [
                        "utf-8",
                        "utf-16",
                        "latin-1",
                        "cp1252"
                    ]
                },
                "max_file_size_mb": {
                    "type": "integer",
                    "description": "Maximum file size to process in MB",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 100
                }
            },
            "required": [
                "create_backups",
                "file_extensions",
                "encoding"
            ],
            "additionalProperties": false
        },
        "ai_models": {
            "type": "object",
            "description": "AI model configuration",
            "properties": {
                "default_weight": {
                    "type": "integer",
                    "description": "Default weight for AI models",
                    "default": 50,
                    "minimum": 0,
                    "maximum": 100
                },
                "max_weight": {
                    "type": "integer",
                    "description": "Maximum weight for AI models",
                    "default": 100,
                    "minimum": 1,
                    "maximum": 1000
                },
                "min_weight": {
                    "type": "integer",
                    "description": "Minimum weight for AI models",
                    "default": 0,
                    "minimum": 0,
                    "maximum": 100
                },
                "weight_multiplier": {
                    "type": "number",
                    "description": "Multiplier for calculated weights",
                    "default": 1.0,
                    "minimum": 0.1,
                    "maximum": 10.0
                },
                "opposite_trait_penalty": {
                    "type": "integer",
                    "description": "Penalty for opposite traits",
                    "default": -25,
                    "minimum": -100,
                    "maximum": 0
                }
            },
            "required": [
                "default_weight",
                "max_weight",
                "min_weight"
            ],
            "additionalProperties": false
        },
        "ck3_syntax": {
            "type": "object",
            "description": "CK3 syntax configuration",
            "properties": {
                "indent_size": {
                    "type": "integer",
                    "description": "Indentation size for generated code",
                    "default": 4,
                    "minimum": 2,
                    "maximum": 8
                },
                "use_tabs": {
                    "type": "boolean",
                    "description": "Use tabs instead of spaces for indentation",
                    "default": false
                },
                "add_comments": {
                    "type": "boolean",
                    "description": "Add comments to generated code",
                    "default": true
                },
                "comment_style": {
                    "type": "string",
                    "description": "Style of comments to add",
                    "default": "brief",
                    "enum": [
                        "none",
                        "brief",
                        "detailed"
                    ]
                },
                "validate_syntax": {
                    "type": "boolean",
                    "description": "Validate generated CK3 syntax",
                    "default": true
                }
            },
            "required": [
                "indent_size",
                "use_tabs",
                "add_comments"
            ],
            "additionalProperties": false
        },
        "logging": {
            "type": "object",
            "description": "Logging configuration",
            "properties": {
                "level": {
                    "type": "string",
                    "description": "Logging level",
                    "default": "INFO",
                    "enum": [
                        "DEBUG",
                        "INFO",
                        "WARNING",
                        "ERROR",
                        "CRITICAL"
                    ]
                },
                "file": {
                    "type": "string",
                    "description": "Log file path (empty for console only)",
                    "default": ""
                },
                "format": {
                    "type": "string",
                    "description": "Log message format",
                    "default": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
                },
                "max_file_size_mb": {
                    "type": "integer",
                    "description": "Maximum log file size in MB",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 100
                },
                "backup_count": {
                    "type": "integer",
                    "description": "Number of backup log files to keep",
                    "default": 5,
                    "minimum": 0,
                    "maximum": 20
                }
            },
            "required": [
                "level",
                "format"
            ],
            "additionalProperties": false
        },
        "validation": {
            "type": "object",
            "description": "Validation configuration",
            "properties": {
                "check_trait_references": {
                    "type": "boolean",
                    "description": "Check that all trait references exist",
                    "default": true
                },
                "check_model_references": {
                    "type": "boolean",
                    "description": "Check that all model references exist",
                    "default": true
                },
                "check_weight_ranges": {
                    "type": "boolean",
                    "description": "Check that weights are within valid ranges",
                    "default": true
                },
                "check_ck3_syntax": {
                    "type": "boolean",
                    "description": "Check generated CK3 syntax",
                    "default": true
                },
                "strict_mode": {
                    "type": "boolean",
                    "description": "Enable strict validation mode",
                    "default": false
                }
            },
            "required": [
                "check_trait_references",
                "check_model_references"
            ],
            "additionalProperties": false
        },
        "development": {
            "type": "object",
            "description": "Development and testing configuration",
            "properties": {
                "test_mode": {
                    "type": "boolean",
                    "description": "Enable test mode for development",
                    "default": false
                },
                "debug_mode": {
                    "type": "boolean",
                    "description": "Enable debug mode",
                    "default": false
                },
                "verbose_output": {
                    "type": "boolean",
                    "description": "Enable verbose output",
                    "default": false
                },
                "dry_run": {
                    "type": "boolean",
                    "description": "Perform dry run without modifying files",
                    "default": false
                },
                "profile_performance": {
                    "type": "boolean",
                    "description": "Profile performance during execution",
                    "default": false
                }
            },
            "required": [
                "test_mode",
                "debug_mode"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "directories",
        "processing",
        "ai_models",
        "ck3_syntax",
        "logging",
        "validation"
    ],
    "additionalProperties": false
}