{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CK3 AI Model Definitions",
    "description": "Schema for CK3 AI model definitions including traits and character models",
    "type": "object",
    "properties": {
        "traits": {
            "type": "object",
            "description": "Individual character traits that affect AI behavior",
            "patternProperties": {
                "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "type": "object",
                    "description": "A character trait definition",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Human-readable description of the trait",
                            "minLength": 1,
                            "maxLength": 500
                        },
                        "weight": {
                            "type": "integer",
                            "description": "Base weight influence of this trait",
                            "minimum": -100,
                            "maximum": 100
                        },
                        "ai_effects": {
                            "type": "object",
                            "description": "How this trait affects AI behavior",
                            "properties": {
                                "base_weight": {
                                    "type": "integer",
                                    "description": "Base weight for this trait",
                                    "minimum": -100,
                                    "maximum": 100
                                },
                                "modifiers": {
                                    "type": "array",
                                    "description": "Conditional weight modifiers",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "condition": {
                                                "type": "string",
                                                "description": "CK3 condition that triggers this modifier",
                                                "minLength": 1
                                            },
                                            "weight_adjustment": {
                                                "type": "integer",
                                                "description": "Weight adjustment when condition is met",
                                                "minimum": -100,
                                                "maximum": 100
                                            },
                                            "description": {
                                                "type": "string",
                                                "description": "Description of this modifier",
                                                "maxLength": 200
                                            }
                                        },
                                        "required": [
                                            "condition",
                                            "weight_adjustment"
                                        ],
                                        "additionalProperties": false
                                    }
                                }
                            },
                            "required": [
                                "base_weight"
                            ],
                            "additionalProperties": false
                        },
                        "opposite_traits": {
                            "type": "array",
                            "description": "Traits that conflict with this one",
                            "items": {
                                "type": "string",
                                "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                            },
                            "uniqueItems": true
                        },
                        "categories": {
                            "type": "array",
                            "description": "Categories this trait belongs to",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "personality",
                                    "education",
                                    "lifestyle",
                                    "genetic",
                                    "temporary",
                                    "custom"
                                ]
                            },
                            "uniqueItems": true
                        },
                        "ck3_trait_name": {
                            "type": "string",
                            "description": "Corresponding CK3 trait name if different",
                            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                        }
                    },
                    "required": [
                        "description",
                        "weight",
                        "ai_effects"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "models": {
            "type": "object",
            "description": "Character behavior models that combine traits",
            "patternProperties": {
                "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "type": "object",
                    "description": "A character behavior model",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Human-readable description of the model",
                            "minLength": 1,
                            "maxLength": 500
                        },
                        "base_weight": {
                            "type": "integer",
                            "description": "Base weight for this behavior model",
                            "minimum": 0,
                            "maximum": 100
                        },
                        "traits": {
                            "type": "object",
                            "description": "Traits that influence this model",
                            "properties": {
                                "positive": {
                                    "type": "array",
                                    "description": "Traits that increase likelihood of this behavior",
                                    "items": {
                                        "type": "string",
                                        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                    },
                                    "uniqueItems": true
                                },
                                "negative": {
                                    "type": "array",
                                    "description": "Traits that decrease likelihood of this behavior",
                                    "items": {
                                        "type": "string",
                                        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                    },
                                    "uniqueItems": true
                                }
                            },
                            "required": [
                                "positive",
                                "negative"
                            ],
                            "additionalProperties": false
                        },
                        "opposite_traits": {
                            "type": "array",
                            "description": "Traits that strongly oppose this behavior",
                            "items": {
                                "type": "string",
                                "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                            },
                            "uniqueItems": true
                        },
                        "modifiers": {
                            "type": "array",
                            "description": "Additional conditions that affect this model",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "condition": {
                                        "type": "string",
                                        "description": "CK3 condition that triggers this modifier",
                                        "minLength": 1
                                    },
                                    "weight_adjustment": {
                                        "type": "integer",
                                        "description": "Weight adjustment when condition is met",
                                        "minimum": -100,
                                        "maximum": 100
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Description of this modifier",
                                        "maxLength": 200
                                    },
                                    "priority": {
                                        "type": "integer",
                                        "description": "Priority of this modifier (higher = applied first)",
                                        "minimum": 1,
                                        "maximum": 100,
                                        "default": 50
                                    }
                                },
                                "required": [
                                    "condition",
                                    "weight_adjustment"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "categories": {
                            "type": "array",
                            "description": "Categories this model belongs to",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "combat",
                                    "diplomacy",
                                    "stewardship",
                                    "intrigue",
                                    "learning",
                                    "lifestyle",
                                    "succession",
                                    "war",
                                    "peace",
                                    "custom"
                                ]
                            },
                            "uniqueItems": true
                        },
                        "requirements": {
                            "type": "object",
                            "description": "Requirements for this model to be applicable",
                            "properties": {
                                "minimum_age": {
                                    "type": "integer",
                                    "description": "Minimum character age for this model",
                                    "minimum": 0,
                                    "maximum": 100
                                },
                                "maximum_age": {
                                    "type": "integer",
                                    "description": "Maximum character age for this model",
                                    "minimum": 0,
                                    "maximum": 100
                                },
                                "required_traits": {
                                    "type": "array",
                                    "description": "Traits that must be present",
                                    "items": {
                                        "type": "string",
                                        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                    },
                                    "uniqueItems": true
                                },
                                "forbidden_traits": {
                                    "type": "array",
                                    "description": "Traits that must not be present",
                                    "items": {
                                        "type": "string",
                                        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                                    },
                                    "uniqueItems": true
                                },
                                "character_conditions": {
                                    "type": "array",
                                    "description": "Additional CK3 character conditions",
                                    "items": {
                                        "type": "string",
                                        "minLength": 1
                                    }
                                }
                            },
                            "additionalProperties": false
                        },
                        "metadata": {
                            "type": "object",
                            "description": "Additional metadata for this model",
                            "properties": {
                                "author": {
                                    "type": "string",
                                    "description": "Author of this model",
                                    "maxLength": 100
                                },
                                "version": {
                                    "type": "string",
                                    "description": "Version of this model",
                                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                                },
                                "created_date": {
                                    "type": "string",
                                    "description": "Creation date (ISO format)",
                                    "format": "date"
                                },
                                "tags": {
                                    "type": "array",
                                    "description": "Tags for categorizing this model",
                                    "items": {
                                        "type": "string",
                                        "maxLength": 50
                                    },
                                    "uniqueItems": true
                                },
                                "notes": {
                                    "type": "string",
                                    "description": "Additional notes about this model",
                                    "maxLength": 1000
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "description",
                        "base_weight",
                        "traits"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "metadata": {
            "type": "object",
            "description": "Metadata for the entire model file",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of this model collection",
                    "minLength": 1,
                    "maxLength": 100
                },
                "description": {
                    "type": "string",
                    "description": "Description of this model collection",
                    "maxLength": 500
                },
                "version": {
                    "type": "string",
                    "description": "Version of this model collection",
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "author": {
                    "type": "string",
                    "description": "Author of this model collection",
                    "maxLength": 100
                },
                "created_date": {
                    "type": "string",
                    "description": "Creation date (ISO format)",
                    "format": "date"
                },
                "last_modified": {
                    "type": "string",
                    "description": "Last modification date (ISO format)",
                    "format": "date"
                },
                "compatibility": {
                    "type": "object",
                    "description": "Compatibility information",
                    "properties": {
                        "ck3_version": {
                            "type": "string",
                            "description": "Compatible CK3 version",
                            "pattern": "^\\d+\\.\\d+\\.\\d+$"
                        },
                        "tool_version": {
                            "type": "string",
                            "description": "Required tool version",
                            "pattern": "^\\d+\\.\\d+\\.\\d+$"
                        }
                    },
                    "additionalProperties": false
                },
                "tags": {
                    "type": "array",
                    "description": "Tags for categorizing this collection",
                    "items": {
                        "type": "string",
                        "maxLength": 50
                    },
                    "uniqueItems": true
                }
            },
            "required": [
                "name",
                "version"
            ],
            "additionalProperties": false
        }
    },
    "anyOf": [
        {
            "required": [
                "traits"
            ]
        },
        {
            "required": [
                "models"
            ]
        }
    ],
    "additionalProperties": false
}